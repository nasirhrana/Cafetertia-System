
@{
    ViewBag.Title = "Save";
    Layout = "~/Views/Shared/_EmployeeSaveView.cshtml";
}

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.css" />
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.jqueryui.min.css" />
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/1.5.2/css/buttons.jqueryui.min.css" />
<link href="~/Content/plugins/StyleSheet1.css" rel="stylesheet" />

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Employee Information
            <small>Save Employee Information</small>
        </h1>
    </section>
    <!-----------------------------------------------------------------------------------Common &  Menu Section------------------------------------------------------------------------------->
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- right column -->
            <div class="col-md-12">
                <div class="box-size box-danger">
                    <div class="box-header with-border">
                        <h3 class="box-title">Employee Information</h3>
                        <h3 class="box-title pull-right"> <input type="button" id="addbutton" name="addbutton" value="Add +" class="btn btn-success" /></h3>
                    </div><!-- /.box-header -->
                    <form class="form-horizontal" id="myForm" method="POST" enctype="multipart/form-data" hidden="myForm">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="EmpId" class="col-sm-2 control-label">PIN</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="EmpId" name="EmpId" placeholder="Employee HR ID" onchange="check();">
                                    <div id="divStatus"></div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Name" class="col-sm-2 control-label">Name</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="Name" name="Name" placeholder="Name">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="EmailId" class="col-sm-2 control-label">Email</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="EmailId" name="EmailId" placeholder="xxxxx@gmail.com">
                                </div>
                            </div>
                            <!-----------------------------------------------------------Date Time Picker------------------------------------------------------------->
                            <div class="form-group">
                                <label for="JoinDate" class="col-sm-2 control-label">Joining Date</label>
                                <div class="col-sm-8">
                                    <input type="date" class="form-control" id="" name="JoinDate" required="JoinDate">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="DivisionId" class="col-sm-2 control-label">Division</label>
                                <div class="col-sm-8">
                                    <select class="form-control select2" id="DivisionId" name="DivisionId" style="width: 100%;">
                                        <option disabled selected>Select One</option>
                                    </select>
                                </div>
                            </div><!-- /.form-group -->
                            <div class="form-group">
                                <label for="DepartmentId" class="col-sm-2 control-label">Department</label>
                                <div class="col-sm-8">
                                    <select class="form-control select2" id="DepartmentId" name="DepartmentId" style="width: 100%;">
                                        <option disabled selected>Select One</option>
                                    </select>
                                </div>
                            </div><!-- /.form-group -->
                            <div class="form-group">
                                <label for="SectionId" class="col-sm-2 control-label">Section</label>
                                <div class="col-sm-8">
                                    <select class="form-control select2" id="SectionId" name="SectionId" style="width: 100%;">
                                        <option value="0">Select One</option>
                                    </select>
                                </div>
                            </div><!-- /.form-group -->
                            <div class="form-group">
                                <label for="DesignationId" class="col-sm-2 control-label">Designation</label>
                                <div class="col-sm-8">
                                    <select class="form-control select2" id="DesignationId" name="DesignationId" style="width: 100%;">
                                        <option disabled selected>Select One</option>
                                    </select>
                                </div>
                            </div><!-- /.form-group -->
                            <div class="form-group">
                                <label for="Proximity" class="col-sm-2 control-label">Proximity Number</label>
                                <div class="col-sm-8">
                                    <input type="text" id="Proximity" name="Proximity" class="form-control" placeholder="Proximity Number" />
                                </div>
                            </div><!-- /.form-group -->

                            <div class="form-group">
                                <label for="Status" class="col-sm-2 control-label">Employee Status</label>
                                <div class="col-sm-8">
                                    <label>
                                        <input type="radio" name="Status" value="True" checked>
                                        Active.
                                        <input type="radio" name="Status" value="False">
                                        Deactive.
                                    </label>
                                </div>
                            </div>


                            <div class="form-group">
                                <label for="UploadFile" class="col-sm-2 control-label"> Image Input </label>
                                <div class="col-md-4">
                                    <input type="file" style="color: transparent" id="UploadFile" name="UploadFile" accept="image/x-png,image/gif,image/jpeg" onchange="validateFileType()">
                                    <div id="imgPreview" class="thumbnail" style="display: none; height: 200px; width: 200px; display: flex">
                                        <img class="img-responsive" id="tergetimg" />
                                    </div>
                                </div>
                            </div>

                        </div><!-- /.box-body -->
                        <div class="box-footer">
                            <button type="button" class="btn btn-danger" onclick="funClear();">Cancel</button>
                            <button type="submit" class="btn btn-info pull-right">Save</button>
                        </div><!-- /.box-footer -->
                    </form>
                    <!-- /.box-body -->
                    <h5 id="showactionresult" style="color: palegreen; text-align: center"> @ViewBag.Message </h5>
                </div><!-- /.box -->
            </div>
            <!-- /.col -->
        </div><!-- /.row -->
        <!-- Data Table-------------------------------------------------------------------------------------------------------------------------------------------- -->
        <div class="row">
            <div class="col-md-12">
                <div class="box-size">
                    <div class="box-header">
                        <h3 class="box-title">All Employee</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="myTable" class="table table-bordered table-striped" style="text-align: center">
                            <thead>
                                <tr>
                                    <th style="text-align: center">Employee Name</th>
                                    <th style="text-align: center">Photograph</th>
                                    <th style="text-align: center">Card No.</th>
                                    <th style="text-align: center">PIN</th>
                                    <th style="text-align: center">Division</th>
                                    <th style="text-align: center">Department</th>
                                    <th style="text-align: center">Section</th>
                                    <th style="text-align: center">Designation</th> 
                                    <th style="text-align: center">Status</th>
                                    <th style="text-align: center">Operation</th>

                                </tr>
                            </thead>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Content/plugins/InputMask/jquery.inputmask.bundle.min.js"></script>
    <script src="~/JavaScript/JavaScript8.js"></script>
    <script src="~/JavaScript/JavaScript9.js"></script>
    <script src="~/JavaScript/JavaScript10.js"></script>
    <script src="~/JavaScript/JavaScript11.js"></script>
    <script src="~/JavaScript/JavaScript12.js"></script>
    <script src="~/JavaScript/JavaScript1.js"></script>
    <script src="~/JavaScript/JavaScript2.js"></script>
    <script src="~/JavaScript/JavaScript3.js"></script>
    <script src="~/JavaScript/JavaScript4.js"></script>
    <script src="~/JavaScript/JavaScript5.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script> 
    <script src="~/JavaScript/DepartmentSave.js"></script> 
    <script>
        $(document).ready(function () {
            getDivision();
            $("#DivisionId").change(function () {
                $('#DepartmentId').find('option')
                        .remove()
                        .end()
                        .append('<option disabled selected>Select One</option>');
                var divisionId = $("#DivisionId").val();
                var json = { divisionId: divisionId, };
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("GetAllDepartmentByDivisionId", "Employee")',
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(json),
                    success: function (data) {
                        $.each(data, function (index, value) {
                            $('#DepartmentId').append('<option value="' + value.Id + '">' + value.Name + '</option>');
                        });
                    }
                });

            });
            $("#DepartmentId").change(function () {
                $('#SectionId').find('option')
                        .remove()
                        .end()
                        .append('<option disabled selected>Select One</option>');
                var departmentId = $("#DepartmentId").val();
                var json = { departmentId: departmentId, };
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("GetAllSection", "Employee")',
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(json),
                    success: function (data) {
                        $.each(data, function (index, value) {
                            $('#SectionId').append('<option value="' + value.Id + '">' + value.SectionName + '</option>');
                        });
                    }
                });

            });
            getDesignation();

            $("#JoinDate").pickadate({
                today: '',
                selectYears: true,
                selectMonths: true,
                clear: 'Clear selection',
                close: 'Cancel',
                format: 'dd/mm/yyyy',
                formatSubmit: 'yyyy/mm/dd'
            });
           


            //jQuery.validator.addMethod("lettersonly", function(value, element) {
            //    return this.optional(element) || /^[a-z," ",&]+$/i.test(value);
            //}, "Please input letters only.");
            $('#EmpId').change(function () {
                var employeeId = $("#EmpId").val();
                var status = $("#divStatus");
                status.html("Checking....").removeClass();

                var json = { employeeId: employeeId, };
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("CheckEmployeeId", "Employee")',
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(json),
                    success: function (data) {
                        if (data == true) {
                            status.html(employeeId + " is available!").addClass("green!important");
                        } else {
                            status.html(employeeId + " is not available!").addClass("red!important");
                        }
                    }
                });
            });

            //jQuery.validator.addMethod("alphanumeric", function(value, element) {
            //    return this.optional(element) || /^[a-zA-Z0-9]+$/i.test(value);
            //}, "Please input only alphanumeric value. ");

            $("#myForm").validate({
                rules: {
                    EmpId: {
                        required: true,
                        alphanumeric: true,
                        maxlength: 6,
                        minlength: 4
                    },
                    Name: {
                        required: true
                    },
                    JoinDate: {
                        required: true
                    },
                    DepartmentId: {
                        required: true
                    },
                    DivisionId: {
                        required: true
                    },
                    DesignationId: {
                        required: true
                    },
                    Proximity: {
                        required: true,
                        maxlength: 8,
                        minlength: 8
                    }

                },
                messages: {
                    EmpId: {
                        required: "Please Provide Employee PIN.",
                        maxlength: "Employee ID Should be at least 6 Characters",
                        minlength: "Employee ID Should be at least 4 Characters"
                    },
                    Name: {
                        required: "Please provide an employee Name"
                    },
                    JoinDate: {
                        required: "Please Select a Date from Datepicker."
                    },
                    DepartmentId: {
                        required: "Please Select a Department."
                    },
                    DesignationId: {
                        required: "Please Select a Designation."
                    },
                    DivisionId: {
                        required: "Please Select a Division."
                    },
                    Proximity: {
                        required: "Please Select a Proximity Number.",
                        maxlength: "Proximity Number Should be at least 8 Characters",
                        minlength: "Proximity Number be at least 8 Characters"
                    }

                }
            }); //validate form 1 


            $.ajax({
                url: '@Url.Action("GetAllEmployee", "Employee")',
                dataType: 'json',
                method: 'post',
                success: function (data) {
                    $('#myTable').dataTable({
                        //responsive: true,
                        data: data,
                        columns: [
                        {
                            'data': 'Name'
                        },
                        {
                            "data": "UploadFile",
                            "render": function (data) { return '<img src="/UploadFile/' + data + '" style="height:70px;width:70px;"/>'; }
                        },
                        {
                            'data': 'Proximity'
                        },
                    {
                        'data': 'EmpId'
                    },
                      {
                          'data': 'Division'
                      },
                         {
                             'data': 'Department'
                         },
                         {
                             'data': 'SectionName'
                         },
                          {
                              'data': 'Designation'
                          },
                            {
                                'data': 'Status'
                            },

                    {
                        "targets": [4],
                        "data": "Id",
                        "render": function (data, type, full) { return '@Html.ActionLink("Edit", "Edit", new {id = "replace"})'.replace("replace", data); }
                    }
                        ]
                    });
                }
            });
        });

        function funClear() {
            $("#Name").val('');
        };

        //$(document).ready(function() {
        //    $("#myForm").hide();


        //});
       

        var count = 0;
        $("#addbutton").click(function() {
            // $("#addbutton").hide();

            if (count == 0) {
                $("#showactionresult").empty();
                $("#myForm").show(500);
                $("#addbutton").val('Hide');
                count++;
            } else {
                count = 0;
                $("#addbutton").val('Add +');
                $("#myForm").hide(1000);
            }

        });
        function Clear() {
            document.getElementById("myForm").reset();
        }

        function getDivision() {
            //$('#DivisionId').find('option')
            //    .remove()
            //    .end()
            //    .append('<option disabled selected>Select One</option>');
            $.ajax({
                url: "../Employee/GetAllDivision",
                type: "POST",
                success: function (result) {

                    $.each(result, function (index, value) {
                        $('#DivisionId').append('<option value="' + value.Id + '">' + value.Name + '</option>');
                    });
                },
                error: function (err) {
                    alert(err);
                }
            });
        }


        function getDesignation() {
            $('#DesignationId').find('option')
                .remove()
                .end()
                .append('<option disabled selected>Select One</option>');
            $.ajax({
                url: "../Employee/GetAllDesignation",
                type: "POST",
                success: function (result) {

                    $.each(result, function (index, value) {
                        $('#DesignationId').append('<option value="' + value.Id + '">' + value.Name + '</option>');
                    });
                },
                error: function (err) {
                    alert(err);
                }
            });
        }

    </script>
}