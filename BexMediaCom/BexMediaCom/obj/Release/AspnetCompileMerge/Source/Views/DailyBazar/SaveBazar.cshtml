@model BexMediaCom.Models.DailyBazar

@{
    ViewBag.Title = "SaveBazar";
    Layout = "~/Views/Shared/_LayoutCafe.cshtml";
}
<link href="~/Content/plugins/StyleSheet1.css" rel="stylesheet" />

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Daily Bazar
            <small>Save Daily Bazar</small>
        </h1>
    </section>
    <!-----------------------------------------------------------------------------------Common &  Menu Section------------------------------------------------------------------------------->
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- right column -->
            <div class="col-md-12">
                <div class="box-size box-danger">
                    <div class="box-header with-border">
                        <h3 class="box-title" style="color:white"> Save Daily Bazar </h3>
                    </div>

                    <form class="form-horizontal" method="POST" id="myForm">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="ItemId" class="col-sm-2 control-label">Item</label>
                                <div class="col-sm-8">
                                    <select class="form-control select2" id="ItemId" name="ItemId" style="width: 100%;">
                                        <option disabled selected>Select Item</option>
                                    </select>
                                </div>
                            </div>  

                            <div class="form-group">
                                <label class="col-sm-2 control-label"> Amount </label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="Amount" name="Amount" placeholder="Amount">
                                </div>
                            </div> 

                            <div class="form-group">
                                <label class="col-sm-2 control-label"> Date </label>
                                <div class="col-sm-8">
                                    <input type="date" class="form-control" id="Date" name="Date" value="date">
                                </div>
                            </div>

                            <div class="col-sm-2"></div>

                        </div><!-- /.box-body -->
                        <h4 style="text-align: center; color: black">@ViewBag.Message </h4>
                        <div class="box-footer">
                            <button type="button" class="btn btn-default" onclick="Clear();">Cancel</button>
                            <button type="submit" class="btn btn-info pull-right">Save</button>
                        </div><!-- /.box-footer -->

                    </form>

                </div><!-- /.box -->
            </div>
            <!-- /.col -->
        </div><!-- /.row -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function() {
            GetItem();
        });

        function GetItem() {
            $('#ItemId').find('option')
                .remove()
                .end()
                .append('<option disabled selected>Select Item</option>');
            $.ajax({
                url: '@Url.Action("GetItem", "ViewItemWiseReport")',
                type: "POST",
                success: function (result) {
                    $.each(result, function (index, value) {
                        $('#ItemId').append('<option value="' + value.Id + '">' + value.Name + '</option>');
                    });
                },
                error: function (err) {
                    alert(err);
                }
            });
        }

        function Clear() {
            $("#Date").val(' ');
            $("#Amount").val(' ');
        }
    </script>
}
