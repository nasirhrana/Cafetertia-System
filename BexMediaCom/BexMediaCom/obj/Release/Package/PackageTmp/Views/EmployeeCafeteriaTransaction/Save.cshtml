    <script> 
        $(document).ready(function () {
           

            $("#btn").click(function () {
                $('#myTable').DataTable().destroy();
                var date = $("#date").val();
                $.ajax({
                    url: '@Url.Action("GetDayTransaction", "EmployeeCafeteriaTransaction")',
                    dataType: 'json',
                    method: 'post',
                    data: { date: date },
                    success: function (data) {
                        $('#myTable').dataTable({
                            destroy: true,
                            //responsive: true,
                            data: data,
                            columns: [
                            {
                                'data': 'EmployeeName'
                            },
                            {
                                'data': 'EmpId'
                            },
                            {
                                'data': 'Division'
                            },
                            {
                                'data': 'Department'
                            },
                            {
                                'data': 'Section'
                            },
                            {
                                'data': 'CheckDate'
                            },
                            {
                                'data': 'CheckTime'
                             },
                             {
                                 'data': 'ItemName'
                             },
                            {
                                "targets": [4],
                                "data": "Id",
                                "render": function (data, type, full) { return '@Html.ActionLink("Delete", "TransactionDelete", new { id = "replace" }, new { onclick = "return confirm('Are you sure you wish to delete?');" })'.replace("replace", data); }
                            }
                            ]
                        });
                    }
                });
            });

















