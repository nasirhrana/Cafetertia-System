
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<link href="~/Content/plugins/StyleSheet1.css" rel="stylesheet" />

<div class="content-wrapper body-color">

    <section class="content">
        <!-- Main row -->
        <div class="row">
            <div class="col-md-2"></div>
            
            <div class="col-md-6">
                <img src="/UploadFile/bg_logo.jpg" style="height: 120px; width: 100%" />
                <marquee scrollamount="3"> <h2 style="text-align: center; color: black"> BEXIMCO Media Management System </h2> </marquee>
                <div class="box-Login box-danger">
                    <div class="box-header with-border">
                        <h3 style="text-align: center; color: black">Login</h3>
                        <form id="" class="form-horizontal" method="POST">
                            <fieldset>
                                <legend></legend>
                                <div class="box-body">
                                    <div class="form-group">
                                        <div class="col-sm-12">
                                            <label id="showUserNumber" class="control-label" style="color: black"></label>
                                            <input type="text" class="form-control" id="UserNumber" name="UserNumber" placeholder=" Email / User Number">
                                        </div>
                                    </div>
                                </div>

                                <div class="box-body">
                                    <div class="form-group">
                                        <div class="col-sm-12">
                                            <label id="showPassword" class="control-label" style="color: black"></label>
                                            <input type="password" class="form-control" id="Password" name="Password" placeholder="Password">
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="box-body">
                                    <div class="form-group">
                                        <label for="Email" class="col-sm-2 control-label" style="color: black">  </label>
                                        <div class="col-sm-10">
                                            <button type="submit" class="btn btn-info pull-right">Login</button>                                        </div>
                                    </div>
                                </div>

                            </fieldset>

                        </form>
                    </div>
                </div>

            </div>

            <div class="col-md-3"></div>

        </div>
        <!-- /.row (main row) -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script>
    $(document).ready(function () {
        $("#UserNumber").click(function () {
            $("#showUserNumber").text("Email / User Number");
        });
        $("#Password").click(function () {
            $("#showPassword").text("Password");
        });
    });

</script>

}