            $("#EmpId").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: '@Url.Action("AutoSearch", "ViewEmployeeTransaction")',
                        dataType: "json",
                        data: { search: $("#EmpId").val() },
                        success: function (data) {
                            response($.map(data, function (item) {
                                return { label: item.Name + "---" + item.Proximity + "---" + item.DivisionName + "---" + item.EmailId + "---" + item.EmpId, value: item.EmpId};
                            }));
                        },
                        error: function (xhr, status, error) {
                            alert("Error");
                        }
                    });
                }
            });
        });
        var count = 0;
        $("#addbutton").click(function () {
            // $("#addbutton").hide();

            if (count == 0) {
                $("#showactionresult").empty();
                $("#myForm").show(500);
                $("#addbutton").val('Hide');
                count++;
            } else {
                count = 0;
                $("#addbutton").val('Add +');
                $("#myForm").hide(1000);
            }

        });
    </script>
